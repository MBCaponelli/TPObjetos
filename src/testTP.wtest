import example.*
import Canciones.*
import guitarras.*
import estadios.*
describe "tests entrega 1"{
	const cisne
	const laFamilia
	const fender
	const gibson
	const trastienda
	const lunaPark
	const lucia
	const joaquin
	const luisAlberto
	fixture{
		lucia = new Lucia()
		lucia.banda("Pimpinela")
		lucia.habilidad(70)
	
		
		joaquin = new Joaquin()
	
		joaquin.banda("Pimpinela")
		joaquin.habilidad(20)
			
		
		luisAlberto = new LuisAlberto()
		
		cisne = new Cancion()
		cisne.letra("Hoy el viento se abrió quedó vacío el aire una vez más y el manantial brotó y nadie está aquí y puedo ver que solo estallan las hojas al brillar")
		cisne.duracion(312)
		
		laFamilia=new Cancion()
		laFamilia.letra("Quiero brindar por mi gente sencilla, por el amor brindo por la familia")
		laFamilia.duracion(264)
		
		fender= new Fender()
		gibson = new Gibson()
		
		trastienda= new Trastienda()
		trastienda.capacidad(400)
		trastienda.cantantes([luisAlberto, joaquin, lucia])
		lunaPark= new LunaPark()
		lunaPark.capacidad(9290)
		lunaPark.cantantes([luisAlberto, joaquin, lucia])
		
	

	}
	
test "si Joaquin canta en un grupo, su habilidad es 25" {

	assert.equals(joaquin.habilidad(), 25)
}

test "Si joaquin decide ser solista, su habilidad es 20"{
	joaquin.banda(null)
	assert.equals(joaquin.habilidad(),20)
}

test "Joaquin no interpreta bien la cancion la Familia"{
	assert.equals(joaquin.interpreta(laFamilia), false)
}

test "Joaquin interpreta bien la cancion Cisne"{
	assert.equals(joaquin.interpreta(cisne), true)
}
test "si lucia canta en un grupo, su habilidad es 50" {

	assert.equals(lucia.habilidad(), 50)
}
test "si lucia canta en un grupo, pero se va de solista su habilidad es 70" {

	lucia.banda(null)
	assert.equals(lucia.habilidad(), 70)
}
